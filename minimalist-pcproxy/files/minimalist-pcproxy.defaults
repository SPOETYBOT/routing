#!/bin/sh

if [ "`uci -q get upnpd.config._pcproxy_configured`" = "1" ]
then
    exit
fi

uci batch <<EOF
set upnpd.config.enable_upnp=0
set upnpd.config.pcp_allow_thirdparty=0
set upnpd.config.internal_iface=disable
set upnpd.config.ipv6_listening_ip=::0
set upnpd.config.external_zone=lan
set upnpd.config._pcproxy_configured=0
commit upnpd
EOF
